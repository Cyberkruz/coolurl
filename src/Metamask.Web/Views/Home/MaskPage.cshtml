@model Metamask.Web.Models.MaskPageViewModel
@{
  ViewData["Title"] = "MaskPage";
}
@section Meta
{
  <meta name="og:type" content="article" />
  <meta name="og:title" content="@Model.PageMask.Title" />
  <meta name="og:description" content="@Model.PageMask.Description" />
  <meta name="og:url" content="@Model.Url" />
  <meta name="site_name" content="Interesting Links" />
  <meta property="article:tag" content="alt tag" />
  <meta property="article:tag" content="canonical tag" />
  <meta property="article:tag" content="header tag" />
  <meta property="article:tag" content="html" />
  <meta property="article:tag" content="html tags" />
  <meta property="article:tag" content="meta description" />
  <meta property="article:tag" content="meta tags" />
  <meta property="article:tag" content="open graph" />
  <meta property="article:tag" content="responsive design meta tag" />
  <meta property="article:tag" content="robots meta tag" />
  <meta property="article:tag" content="seo" />
  <meta property="article:tag" content="title tag" />
  <meta property="article:tag" content="twitter card" />
  <meta property="article:section" content="Search Engine Optimization" />
  <meta property="article:published_time" content="@Model.PageMask.CreateDateUtc.ToString("{0:O}")" />
  <meta property="article:modified_time" content="@Model.PageMask.UpdateDateUtc.ToString("{0:O}")" />
  <meta property="og:updated_time" content="@Model.PageMask.UpdateDateUtc.ToString("{0:O}")" />
  <meta name="twitter:card" content="summary" />
  <meta name="twitter:description" content="@Model.PageMask.Description" />
  <meta name="twitter:title" content="@Model.PageMask.Title" />
}
<!-- Header -->
<header class="masthead">
  <div class="container h-100">
    <div class="text-center">
      <h1 class="mb-5 text-uppercase">Hide a Link</h1>

      <div class="card py-4">
        <div class="card-body text-center">
          <p>
            This site demonstrates how to hide the metadata of a link. If you don't know the person who sent you
            this link DO NOT PROCEED!
          </p>
          <a href="@Model.PageMask.TargetUrl" class="btn btn-primary mb-4">Go to original link</a>
          <p>
            @Model.PageMask.TargetUrl
          </p>
        </div>
      </div>

    </div>
  </div>
</header>
<!-- End Header -->


